<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.TaskActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_createProject"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:title=""
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_close"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/svCardDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tiêu đề + Check -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cbDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvCardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên thẻ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"/>
            </LinearLayout>

            <!-- Phase -->
            <TextView
                android:id="@+id/tvPhaseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase: Hehe"
                android:textColor="#666666"
                android:paddingTop="4dp"/>

            <!-- Mô tả -->
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thêm mô tả thẻ"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:background="@android:color/transparent"
                android:paddingTop="12dp"/>

            <!-- Các label -->
            <TextView android:text="Nhãn" style="@style/DetailLabel"/>
            <TextView android:text="Thành viên" style="@style/DetailLabel"/>
            <TextView android:text="Ngày bắt đầu - Ngày kết thúc" style="@style/DetailLabel"/>

            <!-- File đính kèm -->
            <Button
                android:id="@+id/btnAttachFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Các tập tin đính kèm"
                android:layout_marginTop="12dp"/>

            <!-- Checklist -->
            <Button
                android:id="@+id/btnChecklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Danh sách công việc"
                android:layout_marginTop="8dp"/>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/commentLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Thêm nhận xét"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/btnSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Gửi"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
